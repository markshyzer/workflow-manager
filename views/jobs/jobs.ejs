<%- include('../partials/header') %>
<h1>All Jobs</h1>

<% jobs.forEach(function(j) { %>
<div class="entry <%= j.status %>">

    <ul>
<li> 
    <h2><a href="/<%= j.fileName %>"><%= j.source %></a></h2>
</li>
<li>
    <%= j.service %> due <%= j.dueDate %>
</li>
</ul>
<ul>
<li>
    <%= j.fileLength %> mins
</li>
<li>
    Assigned To:
    <%= j.assignedTo.email %>
</li>
<li>
    <li></li>
    <a href="/jobs/<%= j._id %>">Details</a>
</li>
<li>
    <a href="/jobs/<%= j._id %>/edit">Edit</a>
</li>
    </li>
</ul>
</div>
<% }) %>

<p><a href="/jobs/new">Add Job</a></p>